        <class>domain.CourseMaterial</class>
        <class>domain.Formula</class>
        <class>domain.Image</class>
        <class>domain.NonMember</class>
        <class>domain.Session</class>
        <class>domain.TrainingDay</class>
        <class>domain.User</class>
        <class>domain.Activity</class>
        <class>domain.Score</class>
        <class>domain.ActivityMember</class>
